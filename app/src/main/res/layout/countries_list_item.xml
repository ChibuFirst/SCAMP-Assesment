<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_countries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#0D1333"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/text_confirmed_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Confirmed: \n102"
                android:textColor="#4DB5FF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_countries" />

            <TextView
                android:id="@+id/text_confirmed_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_countries"
                android:layout_alignParentEnd="true"
                android:text="Total Confirmed: \n2345678"
                android:textColor="#4D79FF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_countries" />

            <TextView
                android:id="@+id/text_deaths_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_confirmed_new"
                android:layout_alignParentStart="true"
                android:text="New Deaths: \n987"
                android:textColor="#FFB259"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_confirmed_new" />

            <TextView
                android:id="@+id/text_deaths_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_confirmed_total"
                android:layout_alignParentEnd="true"
                android:text="Total Deaths: \n3984"
                android:textColor="#FF5959"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/text_confirmed_total"
                app:layout_constraintTop_toBottomOf="@id/text_confirmed_total" />

            <TextView
                android:id="@+id/text_recovered_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_deaths_new"
                android:layout_alignParentStart="true"
                android:text="New Recovered: \n986223"
                android:textColor="#9059FF"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_deaths_new" />

            <TextView
                android:id="@+id/text_recovered_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_deaths_total"
                android:layout_alignParentEnd="true"
                android:text="Total Recovered: \n1029837784"
                android:textColor="#4CD97B"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/text_deaths_total"
                app:layout_constraintTop_toBottomOf="@id/text_deaths_total" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>